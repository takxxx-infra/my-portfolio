---
import type { TagLabel } from "../../constants/tags";
import { TAG_MAP } from "../../constants/tags";

type Props = {
	label: TagLabel | string;
	emphasize?: boolean;
};

const { label, emphasize = false } = Astro.props;
const tag = TAG_MAP[label as TagLabel];
const color = tag?.hex ?? "#CBD5F6";
---

<span
	class={`inline-flex items-center gap-1 rounded-full border px-3 py-1 text-xs font-semibold uppercase tracking-wide transition-transform duration-200 ${
		emphasize ? "shadow-lg ring-2 ring-white/60" : ""
	}`}
	style={`--tag-color:${color}; background-color: color-mix(in srgb, var(--tag-color) 80%, transparent); border-color: var(--tag-color); color: #0a2a33;`}
>
	{label}
</span>
